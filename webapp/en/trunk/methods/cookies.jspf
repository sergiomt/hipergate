        SESSION_PROFILE = ALL_SESSION_COOKIES[iCookieIndex].getValue();
        if (null!=SESSION_PROFILE) SESSION_PROFILE = java.net.URLDecoder.decode(SESSION_PROFILE, COOKIE_ENCODING);
        break;
