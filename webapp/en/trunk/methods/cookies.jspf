    } // next
    if (null==SESSION_PROFILE) {
      synchronized (application) {
        GlobalDBBindBean = (com.knowgate.dataobjs.DBBind) pageContext.getAttribute("GlobalDBBind", PageContext.APPLICATION_SCOPE);
